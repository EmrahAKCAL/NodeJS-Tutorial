<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
           <div class="card-body"
                style="height: 200px; overflow: hidden;">
               <img src="/static/images/<%= img %>"
                    alt="image"
                    class="img-fluid rounded w-100 h-100"
               >
           </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/courses/<%= slug %>"
                       class="text-decoration-none">
                        <%= title %>
                    </a>
                </h5>
                <p class="card-text">
                    <%- description %>
                </p>
            </div>
        </div>
    </div>
</div>
