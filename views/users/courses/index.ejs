<!doctype html>
<html lang="en">
<head>
    <%- include("../../partials/head") %>
</head>
<body>
<%- include("../../partials/nav") %>
<div class="container mt-3 min-vh-100">
    <div class="row">
        <div class="col-md-3">
            <%- include("../../partials/category-menu", categories) %>
        </div>
        <div class="col-md-9">
            <h1 class="h3 mb-3">
                <%= title %> (<%=totalItems %>)
            </h1>
            <%if(courses.length === 0 ){%>
                <%- include("../../partials/no-course") %>
            <%}%>
            <% courses.forEach((course) => { %>
                <%- include("../../partials/course-card", course) %>
            <% }) %>
            <%- include("../../partials/pagination") %>
        </div>
    </div>
</div>
<%- include("../../partials/footer") %>
</body>
</html>
