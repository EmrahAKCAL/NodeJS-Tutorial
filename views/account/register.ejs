<!doctype html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
    <style>
        body {
            background-color: #101317;
        }
        .card-width {
            width: 100%;
            max-width: 300px;
        }
        .card {
            background-color: #151b23;
            border-radius: 6px;
            border: 1px solid #30363d;
        }
        .form-group label, h4, p {
            color: #f0f6fc;
        }
        .logo {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
<%- include("../partials/nav") %>
<div class="container">
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="card-width">
            <!--register in header-->
            <div class="card p-3">
                <img src="/static/images/logo128.png"
                     alt="logo"
                     class="mx-auto d-block logo">
                <h4 class="text-center m-0">Create an account</h4>
            </div>
            <!--register in form-->
            <div class="card mt-2 px-3 py-4">
                <% if (typeof  error !== 'undefined' && error){%>
                <div class="alert alert-danger p-2"
                     role="alert">
                    <%= error %>
                </div>
                <%}%>
                <form method="post">
                    <!--first name-->
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text"
                               class="form-control"
                               name="firstName"
                               id="firstName"
                               required>
                    </div>
                    <!--last name-->
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text"
                               class="form-control"
                               name="lastName"
                               id="lastName"
                               required>
                    </div>
                    <!--email-->
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text"
                               class="form-control"
                               name="email"
                               id="email"
                               required>
                    </div>
                    <!--password-->
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password"
                               class="form-control"
                               name="password"
                               id="password"
                               required>
                    </div>
                    <!--submit button-->
                    <button type="submit" class="btn btn-primary w-100 mt-3">Register</button>
                </form>
            </div>
            <!--register link-->
            <div class="card mt-2 p-3">
                <p class="text-center m-0">Already have an account?
                    <a href="/account/login" class="text-primary text-decoration-none">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

</body>
</html>
